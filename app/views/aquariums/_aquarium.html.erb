<table class="table is-bordered is-striped is-narrow is-hoverable">
  <thead>
    <tr>
      <th>
        <span class="aquarium-column">No</span>
      </th>
      <th>
        <span class="aquarium-column"><%= t('defaults.aquarium.name') %></span>
      </th>
      <th>
        <span class="aquarium-column"><%= t('defaults.aquarium.address') %></span>
      </th>
      <th>
        <span class="aquarium-column"><%= t('defaults.aquarium.website') %></span>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @aquariums.order(:id).each do |aquarium| %>
      <tr>
        <td><%= aquarium.id %></td>
        <td><%= link_to aquarium.name, aquarium_path(aquarium), data: { turbo: false }, class: "has-text-info" %></td>
        <td><%= aquarium.address %></td>
        <td><%= link_to t('defaults.aquarium.website'), aquarium.website, class: "has-text-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
