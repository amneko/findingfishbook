<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-8">
        <h1 class="title is-2 has-text-centered">ログイン</h1>
        <%= form_with url: login_path, local: true, class: 'box' do |f| %>
          <div class="field">
            <%= f.label :email, class: 'label' %>
            <div class="control">
              <%= f.text_field :email, class: 'input' %>
            </div>
          </div>
          <div class="field">
            <%= f.label :password, class: 'label' %>
            <div class="control">
              <%= f.password_field :password, class: 'input' %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.submit "ログイン", class: 'button is-info' %>
            </div>
          </div>
        <% end %>
        <div class="has-text-centered">
          <%= link_to "登録ページへ", new_user_path, class: 'has-text-info' %>
          <%# <%= link_to "パスワードをお忘れの方はこちら", new_password_reset_path, class: 'has-text-primary' %>
        </div>
      </div>
    </div>
  </div>
</section>
