<div class="column is-one-third">
  <div class="card post">
    <div class="header">
      <div class="media is-align-items-center">
        <div class="media-left">
          <figure class="image is-48x48 my-2 mx-2">
            <%= image_tag post.user.icon_url, class: "is-rounded" %>
          </figure>
        </div>
        <div class="media-content">
          <p class="title is-4"><%= post.user.name %></p>
        </div>
      </div>
    </div>
    <div class="card-image">
      <figure class="image is-4by3">
        <%= image_tag post.post_image_url %>
      </figure>
    </div>
    <div class="card-content post">
      <div class="content">
        <p>
          <%= t('posts.index.shooting_date') %> : <%= post.shooting_date.strftime('%Y年%m月%d日') %>
        </p>
        <div class="tags">
          <%= link_to post.fish.name, fish_path(post.fish), class: 'tag is-small is-link is-light is-rounded', data: { turbo: false } %>
          <%= link_to post.aquarium.name, aquarium_path(post.aquarium), class: 'tag is-small is-rounded', data: { turbo: false } %>
        </div>
        <nav class="level is-mobile">
          <div class="level-left">
            <p>
              <%= link_to t('posts.index.show_post'), post_path(post), class: "button is-small is-info is-outlined", data: { turbo: false } %>
            </p>
          </div>
          <div class="level-right">
            <div class="level-item has-text-centered">
              <% if logged_in? %>
                <% unless current_user.own?(post) %>
                  <%= render 'like_button', post: post %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </nav>
    </div>
  </div>
</div>
